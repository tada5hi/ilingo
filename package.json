{
    "name": "ilingo",
    "version": "2.4.0",
    "description": "This is a lightweight library for translation.",
    "author": {
        "name": "Peter Placzek",
        "email": "contact@tada5hi.net",
        "url": "https://github.com/tada5hi"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tada5hi/ilingo.git"
    },
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        },
        "./server": {
            "types": "./dist/index.server.d.ts",
            "import": "./dist/index.server.mjs",
            "require": "./dist/index.server.cjs"
        }
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "files": [
        "dist/"
    ],
    "scripts": {
        "commit": "npx git-cz",
        "type-check": "tsc --noEmit",
        "type-check:watch": "npm run type-check -- --watch",
        "build:types": "tsc --emitDeclarationOnly",
        "build:js": "rollup -c",
        "build": "rimraf dist && npm run build:types && npm run build:js",
        "lint": "eslint --ext .js,.vue,.ts ./src",
        "lint:fix": "npm run lint -- --fix",
        "test": "cross-env NODE_ENV=test jest --config ./test/jest.config.js",
        "test:coverage": "npm run test -- --coverage",
        "prepare": "npx husky install",
        "release": "npm run build && changelogen --release --push && npm publish"
    },
    "keywords": [
        "i18n",
        "language",
        "translate",
        "translation",
        "bilingual",
        "internationalization",
        "locale",
        "locales",
        "server-side",
        "client-side"
    ],
    "license": "MIT",
    "devDependencies": {
        "@rollup/plugin-node-resolve": "15.0.2",
        "@swc/core": "^1.3.55",
        "@tada5hi/commitlint-config": "^1.0.1",
        "@tada5hi/eslint-config-typescript": "^1.1.6",
        "@tada5hi/tsconfig": "^0.4.0",
        "@types/jest": "^29.5.0",
        "@types/node": "^18.15.11",
        "changelogen": "^0.5.2",
        "cross-env": "^7.0.3",
        "eslint": "^8.39.0",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "rimraf": "^5.0.0",
        "rollup": "3.20.2",
        "ts-jest": "^29.1.0",
        "typescript": "^5.0.4"
    },
    "dependencies": {
        "locter": "^1.1.0",
        "smob": "^1.0.0"
    }
}
