{
    "name": "ilingo",
    "version": "2.2.1",
    "description": "This is a lightweight library for translation.",
    "author": {
        "name": "Peter Placzek",
        "email": "contact@tada5hi.net",
        "url": "https://github.com/tada5hi"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tada5hi/ilingo.git"
    },
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        },
        "./server": {
            "types": "./dist/index.server.d.ts",
            "import": "./dist/index.server.mjs",
            "require": "./dist/index.server.cjs"
        }
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "files": [
        "dist/"
    ],
    "scripts": {
        "commit": "npx git-cz",
        "type-check": "tsc --noEmit",
        "type-check:watch": "npm run type-check -- --watch",
        "build:types": "tsc --emitDeclarationOnly",
        "build:js": "rollup -c",
        "build": "rimraf dist && npm run build:types && npm run build:js",
        "lint": "eslint --ext .js,.vue,.ts ./src",
        "lint:fix": "npm run lint -- --fix",
        "test": "cross-env NODE_ENV=test jest --config ./test/jest.config.js",
        "test:coverage": "npm run test -- --coverage",
        "prepare": "npx husky install",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "i18n",
        "language",
        "translate",
        "translation",
        "bilingual",
        "internationalization",
        "locale",
        "locales",
        "server-side",
        "client-side"
    ],
    "license": "MIT",
    "dependencies": {
        "lodash": "^4.17.21"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.4.2",
        "@commitlint/config-angular": "^17.4.4",
        "@commitlint/config-conventional": "^17.4.2",
        "@commitlint/cz-commitlint": "^17.4.2",
        "@rollup/plugin-node-resolve": "15.0.1",
        "@semantic-release/changelog": "^6.0.2",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/release-notes-generator": "^10.0.3",
        "@swc/core": "^1.3.35",
        "@tada5hi/eslint-config-typescript": "^1.1.4",
        "@tada5hi/tsconfig": "^0.4.0",
        "@types/jest": "^27.5.0",
        "@types/lodash": "^4.14.191",
        "@types/node": "^18.14.0",
        "codecov": "^3.8.3",
        "coveralls": "^3.1.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.34.0",
        "husky": "^8.0.3",
        "jest": "^27.5.0",
        "rimraf": "^4.1.2",
        "rollup": "3.12.1",
        "ts-jest": "^27.1.4",
        "typescript": "^4.9.5"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    }
}
